<%- include("../includes/header") %>
  <link rel="stylesheet" href="/css/auth-page.min.css">
  <link rel="stylesheet" href="/css/button.styles.min.css">
  <link rel="stylesheet" href="/css/form-input.styles.min.css">
</head>
<body>
  <%- include("../includes/navigation") %>
  <main class="auth-page">
    <form class="auth-form" action="/auth/signin" method="POST"  novalidate>
      <div class="form-title">
        <h1>SIGN IN</h1>
        <span>Sign in with your email and password</span>
      </div>
      <div class="alert">
        <div class="error"><%= error ? error : "" %></div>
        <div class="success"></div>
      </div>            
      <div class="form-group">        
        <input type="email" class="form-input" name="email" value="" required/>
        <label class="form-input-label">Email</label>
      </div>
      <div class="form-group">        
        <input type="password" class="form-input" name="password" value="" required/>
        <label class="form-input-label">Password</label>
      </div>    
      <div class="form-group">
        <button type="submit" class="btn dark">sign in</button>
      </div>
    </form>
    <div class="auth-router">      
      <div>You haven't already an account ? <a href="/auth/signup">Sign Up</a></div>     
      <div>You have forgot password ? <a href="javascript:void(0)">Reset Password</a></div>
    </div>
  </main>
<%- include("../includes/footer") %>

